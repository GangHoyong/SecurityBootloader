<?xml version="1.0" encoding="utf-8"?>
<!-- 죽지 않는 서비스 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kimhajin.securitybootloader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <!-- 서비스 관련 퍼미션 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_SERVICE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.kimhajin.securitybootloader.Splash"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.example.kimhajin.securitybootloader.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- GPS 서비스 -->
        <service
            android:name="com.example.kimhajin.securitybootloader.PersistentService"
            android:enabled="true"
            android:process=":remote" >
        </service>

        <receiver
            android:name="com.example.kimhajin.securitybootloader.RestartService"
            android:enabled="true"
            android:exported="false"
            android:label="RestartService"
            android:process=":remote" >
            <intent-filter>
                <action android:name="ACTION.RESTART.PersistentService" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.example.kimhajin.securitybootloader.Main2Activity"
            android:label="@string/title_activity_main2" >
        </activity>
    </application>

</manifest>